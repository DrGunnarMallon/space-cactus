---
const { class: className, cards } = Astro.props;
---

<div class={className}>
	<div class:list={["mt-12 grid grid-cols-1 gap-5 sm:gap-5", cards]}>
		<slot />
	</div>
</div>

<style>
	@media (min-width: 640px) {
		.grid-cols-1 {
			grid-template-columns: repeat(3, minmax(0, 1fr));
		}
	}
</style>
